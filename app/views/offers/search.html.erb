<div class="container">
    <div class="row">
      <% @offers.each do |offer| %>
        <div class="col-xs-12 col-sm-4">
        <%= link_to offer_path(offer) do %>
          <%= cl_image_tag offer_photo_path(offer), width: 300, height: 200, crop: :fill %>
        <% end %>
        <br>
          <p class="offer-details">
           <strong><%="#{offer.city}" %></strong>
          </p>
          <p class="offer-details">
           <%="#{offer.price}" %> DKK day
          </p>
          <p class="offer-details">
            <%="#{offer.title}" %>
        <br>
        </div>
      <% end %>
    </div>
  </div>
